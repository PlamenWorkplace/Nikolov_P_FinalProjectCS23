        <Rectangle Margin="150,427,150,237" Fill="#e09524" RadiusX="3" RadiusY="3" />
        <Button Click="LogIn" BorderThickness="0" Background="Transparent" Content="LOG IN" Height="36" HorizontalAlignment="Center" Margin="0,427,0,0" VerticalAlignment="Top" Width="100"  FontSize="16"/>
        <Rectangle Margin="282,654,10,10" Fill="#e09524" RadiusX="3" RadiusY="3" />
        <Button Click="SignUp" BorderThickness="0" Background="Transparent" Content="SIGN UP!" Height="36" HorizontalAlignment="Left" Margin="282,654,0,0" VerticalAlignment="Top" Width="108"  FontSize="16"/>
    </Grid>
</Window>
